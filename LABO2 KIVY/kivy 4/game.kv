#:kivy 1.0.9

    #:set col 0,0,1,1
    #:set col2 1,0,0,1
    #:set padding 25
    #:set padding2 35

<Enemy>:
    size: 50, -100 
    canvas:     
        Color:
            rgba: col2  
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'car.png'

<Player>:
    size: 50, 100
    canvas:
        Color:
            rgba: col
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'car.png'


<Game>:
    car: pong_car
    player: player_left

    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: root.center_x+padding2, 0
            size: 5, self.height
        Rectangle:
            pos: root.center_x-padding2, 0
            size: 5, self.height
    canvas:
        Color:
            rgba: (0,1,1,.25)
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

    Label:
        color : [1,1,1,1]
        font_size: 70  
        center_x: root.width / 2
        top: root.top - 50
        text: str(root.player.score)        
   
    Enemy:
        id: pong_car
        center: self.parent.center

    Player:
        id: player_left
        center_x: root.center_x
        y: root.y+padding